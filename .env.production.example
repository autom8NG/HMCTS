# Production Environment Configuration
PORT=3000
NODE_ENV=production

# JWT Configuration - GENERATE STRONG SECRETS BEFORE PRODUCTION
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_ACCESS_SECRET=CHANGE_THIS_TO_STRONG_SECRET_64_BYTES_HEX_STRING_BEFORE_PRODUCTION_USE
JWT_REFRESH_SECRET=CHANGE_THIS_TO_DIFFERENT_STRONG_SECRET_64_BYTES_HEX_STRING

# Token Expiry (in seconds)
ACCESS_TOKEN_EXPIRY=900
REFRESH_TOKEN_EXPIRY=604800

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=5

# Redis Configuration (Required for production)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_TLS=true

# CORS Configuration
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Security
ENFORCE_HTTPS=true
SESSION_SECRET=CHANGE_THIS_TO_STRONG_SESSION_SECRET_64_BYTES
