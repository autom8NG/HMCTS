{
  "name": "oauth2-login-system",
  "version": "1.0.0",
  "description": "OAuth2 authentication system with JWT access and refresh tokens",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest --coverage --verbose",
    "test:watch": "jest --watch",
    "example": "node examples/usage-example.js"
  },
  "keywords": [
    "oauth2",
    "jwt",
    "authentication",
    "express",
    "nodejs"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.6.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "jest-html-reporter": "^4.3.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3",
    "winston": "^3.19.0"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/server.js"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.js"
    ],
    "setupFilesAfterEnv": [
      "./__tests__/setup.js"
    ],
    "reporters": [
      "default",
      [
        "jest-html-reporter",
        {
          "pageTitle": "OAuth2 Authentication Test Report",
          "outputPath": "./test-reports/test-report.html",
          "includeFailureMsg": true,
          "includeConsoleLog": true,
          "theme": "darkTheme",
          "dateFormat": "yyyy-mm-dd HH:MM:ss"
        }
      ]
    ],
    "coverageReporters": [
      "text",
      "lcov",
      "html",
      "json-summary"
    ]
  }
}
